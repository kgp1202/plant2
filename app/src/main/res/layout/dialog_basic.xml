<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_basic_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.plant.AutoResizeTextView
            android:id="@+id/dialog_detail_title"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_corner_background_dialog_top"
            android:text="Title example"
            android:textSize="60dp"
            android:textColor="#ffffff"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/dialog_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:lineSpacingExtra="5dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorReserveText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_background_dialog_bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/dialog_detail_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="CANCEL"
                android:textColor="@color/colorStatusBar"/>

            <Button
                android:id="@+id/dialog_detail_ok_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_background_dialog_bottom"
                android:text="OK"
                android:textColor="@color/colorStatusBar"/>

        </LinearLayout>
</LinearLayout>