<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_basic_frame"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_detail_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:background="@drawable/rounded_corner_background_dialog_top"
        android:text="Title example"
        android:textSize="22dp"
        android:textColor="#ffffff"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="150dp"
       android:orientation="vertical"
       android:background="#fff">

       <Button
           android:id="@+id/dialog_detail_list_item1"
           android:text="동행 인원 없음"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:textSize="17dp"
           android:background="#fff"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/colorStatusBar"
           android:layout_marginLeft="40dp"
           android:layout_marginRight="40dp"/>
       <Button
           android:id="@+id/dialog_detail_list_item2"
           android:text="동행 인원 1명"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:textSize="17dp"
           android:background="#fff"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/colorStatusBar"
           android:layout_marginLeft="40dp"
           android:layout_marginRight="40dp"/>
       <Button
           android:id="@+id/dialog_detail_list_item3"
           android:text="동행 인원 2명"
           android:textColor="#000"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:textSize="17dp"
           android:background="#fff"/>
   </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorReserveText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner_background_dialog_bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/dialog_detail_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="CANCEL"
            android:textColor="@color/colorStatusBar"/>

    </LinearLayout>
</LinearLayout>