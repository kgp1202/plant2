<LinearLayout
    android:id="@+id/fragment_reservation_make_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plant.ReservationFragment"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/reserve_border">

            <AutoCompleteTextView
                android:id="@+id/destination_editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:hint="목적지"
                android:paddingLeft="15dp"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/reserve_blank_nonupdown"
                    android:layout_marginBottom="3px"
                    android:layout_marginTop="3px"/>

            <Spinner
                android:id="@+id/UserNumSpin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:entries="@array/user_name_array"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dayLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/reserve_border_nonupdown">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2px"
                android:layout_marginTop="2px"
                android:layout_marginBottom="2px"
                android:background="@drawable/reserve_date_image"/>

            <TextView
                android:id="@+id/reservation_make_month_textView"
                android:paddingRight="20dp"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:text="12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>

            <TextView
                android:text="월"
                android:textSize="16dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorReserveText"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/reserve_blank_nonupdown"
                android:layout_marginBottom="3px"
                android:layout_marginTop="3px"/>

            <TextView
                android:id="@+id/reservation_make_day_textView"
                android:paddingRight="20dp"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:text="12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>

            <TextView
                android:text="일"
                android:textSize="16dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorReserveText"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/reserve_border">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2px"
                android:layout_marginTop="2px"
                android:layout_marginBottom="2px"
                android:background="@drawable/reserve_time_image"/>

            <TextView
                android:id="@+id/reservation_make_hour_textView"
                android:paddingRight="20dp"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:text="12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>

            <TextView
                android:text="시"
                android:textSize="16dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorReserveText"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/reserve_blank_nonupdown"
                android:layout_marginBottom="3px"
                android:layout_marginTop="3px"/>

            <TextView
                android:id="@+id/reservation_make_minute_textView"
                android:paddingRight="20dp"
                android:gravity="center_vertical|right"
                android:textSize="20dp"
                android:text="12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>

            <TextView
                android:text="분"
                android:textSize="16dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/colorReserveText"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:orientation="horizontal"
            android:background="@drawable/reserve_border_nondown">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/oneway_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/reserve_oneway_clicked_btn" />

            <ImageView
                android:id="@+id/twoway_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/reserve_twoway_btn"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/reserve_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/goal_btn0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/reserve_box2_option1_clicked"/>
            <ImageView
                android:id="@+id/goal_btn1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/reserve_box2_option2"/>
            <ImageView
                android:id="@+id/goal_btn2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/reserve_box2_option3"/>

        </LinearLayout>

        <EditText
            android:id="@+id/comment_editText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@null"
            android:inputType="text">

        </EditText>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/reserve_send_btn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
